{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "moduleDetection": "force",
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src"]
}
